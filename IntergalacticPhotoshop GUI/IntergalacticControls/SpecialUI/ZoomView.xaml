<UserControl x:Class="IntergalacticControls.ZoomView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Height="124" Width="168">
    <Grid>
        <Slider HorizontalAlignment="Stretch" Name="zoomSlider" VerticalAlignment="Bottom" Minimum="0.1" Maximum="3" Value="1" TickFrequency="0.1" IsSnapToTickEnabled="True" Height="22" Width="168" />
        <Image Name="imageView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,25" Stretch="Uniform"/>
        <Rectangle HorizontalAlignment="Left" VerticalAlignment="Top" Width="30" Height="27" Name="centerRect" Stroke="#444" Fill="#8888" Margin="69,40,0,0" />
    </Grid>
</UserControl>
