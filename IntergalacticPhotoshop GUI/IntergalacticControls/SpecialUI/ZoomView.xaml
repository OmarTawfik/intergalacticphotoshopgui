        <Slider HorizontalAlignment="Stretch" Name="zoomSlider" VerticalAlignment="Bottom" Minimum="0.1" Maximum="3" Value="1" TickFrequency="0.02" IsSnapToTickEnabled="True" Height="22" />
    </Grid>
</UserControl>
