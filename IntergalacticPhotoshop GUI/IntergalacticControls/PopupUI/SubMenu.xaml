<UserControl x:Class="IntergalacticControls.SubMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Height="28" >
    <Grid>
        <Rectangle Name="rectHover" Fill="#1444" RadiusX="5" RadiusY="5" Opacity="0"/>
        <Rectangle VerticalAlignment="Bottom" Height="1">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#0000" Offset="0" />
                    <GradientStop Color="#2000" Offset="0.5" />
                    <GradientStop Color="#0000" Offset="1" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle RadiusX="10" RadiusY="10" Stroke="Black" Width="6" Height="6" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" >
            <Rectangle.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="0" Color="Black"  />
            </Rectangle.Effect>
        </Rectangle>
        <Label Name="lblMenuTitle" Content="TITLE OF THE MENU" VerticalContentAlignment="Center" Margin="20,0,0,0"/>
    </Grid>
</UserControl>
