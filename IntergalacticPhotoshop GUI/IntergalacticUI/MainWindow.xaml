        <ResourceDictionary Source="Styles.xaml" />
    </Window.Resources>
    <Grid Name="mainGrid" Background="#456" >
        <Image Name="backgroundRect" Visibility="Hidden" Stretch="None" Source="pack://application:,,,/Pictures/NormalMap.png" />
